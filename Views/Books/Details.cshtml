@model client.Models.Book

<h2>Book Details</h2>

<div>
  <dl class="row">
    <dt class="col-sm-2">Title:</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Author:</dt>
    <dd class="col-sm-10">@Model.Author</dd>

    <dt class="col-sm-2">ISBN:</dt>
    <dd class="col-sm-10">@Model.ISBN</dd>

    <dt class="col-sm-2">Price:</dt>
    <dd class="col-sm-10">@Model.Price</dd>

    <dt class="col-sm-2">Location:</dt>
    <dd class="col-sm-10">@Model.Location?.City</dd>

    <dt class="col-sm-2">Press:</dt>
    <dd class="col-sm-10">@Model.Press?.Name</dd>
  </dl>
</div>

<a class="btn btn-primary" href="@Url.Action("Edit", "Books", new { id = Model.Id })">Edit</a>
<a class="btn btn-secondary" href="@Url.Action("Index", "Books")">Back to List</a>
