@model client.Models.Book

<h2>Delete Book</h2>

<h3>Are you sure you want to delete this book?</h3>
<div>
  <dl class="row">
    <dt class="col-sm-2">Title:</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Author:</dt>
    <dd class="col-sm-10">@Model.Author</dd>

    <dt class="col-sm-2">ISBN:</dt>
    <dd class="col-sm-10">@Model.ISBN</dd>

    <dt class="col-sm-2">Price:</dt>
    <dd class="col-sm-10">@Model.Price.ToString("C")</dd>

    <dt class="col-sm-2">Location:</dt>
    <dd class="col-sm-10">@Model.Location.City</dd>

    <dt class="col-sm-2">Press:</dt>
    <dd class="col-sm-10">@Model.Press.Name</dd>
  </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
  <input type="hidden" asp-for="Id" />
  <button type="submit" class="btn btn-danger">Delete</button>
  <a class="btn btn-secondary" href="@Url.Action("Index", "Books")">Cancel</a>
</form>
